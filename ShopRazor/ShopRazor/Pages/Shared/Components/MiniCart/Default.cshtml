@model MiniCartViewModel
@if (Model != null)
{
    <p>Items in Cart: <span class="badge badge-primary">@Model.NumberofProducts</span></p>
    <p>Total: <b>@Model.TotalAmount.ToString("C2")</b></p>
    <a class="btn btn-primary" asp-page="ViewCart">View Cart</a>
    <a class="btn btn-danger" asp-page="Cart" asp-page-handler="Clear">Clear Cart</a>
    
}
else
{
    <p class="lead m-0">Your cart in empty</p>
}


