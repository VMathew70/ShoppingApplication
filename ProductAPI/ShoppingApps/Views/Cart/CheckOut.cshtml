@model Customer


@{
    ViewData["Title"] = "Payment";
}
<h2>Payment</h2>
<div class="row">
    
        <form asp-action="CreateOrder">
            <div class="form-group">
                <label asp-for="customername" class="control-label">Customer</label>
                <input asp-for="customername" class="control-label"/>
                <span asp-validation-for="customername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label">Email</label>
                <input asp-for="email" class="control-label" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cardnumber" class="control-label">Card Number</label>
                <input asp-for="cardnumber" class="control-label" />
                <span asp-validation-for="cardnumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cvc" class="control-label">CVC</label>
                <input asp-for="cvc" class="control-label" />
                <span asp-validation-for="cvc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="expirydate" class="control-label">Expiry Date</label>
                <input asp-for="expirydate" class="control-label" />
                <span asp-validation-for="expirydate" class="text-danger"></span>
            </div>
        <div class="form-group">
            <input type=submit value="Create" class="btn btn-primary" />           
        </div>
        </form>

    


</div>
