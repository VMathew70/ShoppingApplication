<div class="row">
    <div class="text-center">
        @if (TempData["StockNotAvailable"] != null)
        {
            <div class="alert alert-success">
                @TempData["StockNotAvailable"]
            </div>
        }
    </div>

    @foreach (var item in Model)
    {
        <div class="col-4">
            <img src="/images/@item.image" height="100" width="100" alt="" />
        </div>

        <h4>@item.productname</h4>
        <div>
            @item.productdesc
        </div>
        <div>
            @if (@item.quantity == 0)
            {
                <p style="color:red">Stock Not Available</p>
            }
        </div>
        <p>@item.price.ToString("C2")</p>
        <p>
            <a class="btn btn-primary" asp-controller="Cart" asp-action="Add" asp-route-id="@item.id">Add to Cart</a>
        </p>       
    }

</div>